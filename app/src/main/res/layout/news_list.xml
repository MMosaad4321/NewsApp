<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="data"
            type="com.example.newsapp.models.Article" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:elevation="5dp"
        app:cardCornerRadius="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="@{data.title}"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/shareImageButton"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="sdnfsdnfknfknkfnwerfnweknfkwenr" />

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{data.source.name"
                    tools:text="Name"
                    android:textColor="#3f51b5"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="@id/titleTextView"
                    app:layout_constraintTop_toBottomOf="@id/favouriteImageButton" />

                <TextView
                    android:id="@+id/dateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Date"
                    android:textColor="#3f51b5"
                    android:textSize="16sp"
                    android:text="@{data.publishedAt}"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toBottomOf="@id/favouriteImageButton"
                    app:layout_constraintRight_toRightOf="parent" />

                <ImageView
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                    android:id="@+id/newsImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/nameTextView"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:src="@drawable/ic_launcher_background" />

                <ImageButton
                    android:id="@+id/favouriteImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="NOT-FAV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_star_border_24" />

                <ImageButton
                    android:id="@+id/shareImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/favouriteImageButton"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_share_24" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text = "sdnfsdnfknfknkfnwerfnweknfkwenr"
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="#80FFFFFF"
                android:text="@{data.description}"
                android:layout_gravity="bottom" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</layout>